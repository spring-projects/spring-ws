<ivy-module version="1.1">

    <info organisation="org.springframework" module="spring-ws-airline-sample"/>

    <configurations>
        <conf name="default" extends="global"/>
        <conf name="global" visibility="private"/>
        <conf name="buildtime" visibility="private"/>
        <conf name="test" visibility="private"/>
        <!-- public configurations other projects may use -->
        <conf name="saaj" visibility="public" extends="global"/>
        <conf name="axiom" visibility="public" extends="global"/>
    </configurations>

    <dependencies defaultconf="global->default">
        <!-- global dependencies -->
        <dependency org="apache" name="commons-dbcp" rev="1.2.1"/>
        <dependency org="apache" name="commons-logging" rev="1.0.4"/>
        <dependency org="apache" name="log4j" rev="1.2.12"/>
        <dependency org="joda-time" name="joda-time" rev="1.2.1"/>
        <dependency org="joda-time" name="joda-time-hibernate" rev="0.8"/>
        <dependency org="org.hibernate" name="hibernate" rev="3.1.3"/>
        <dependency org="jdom" name="jdom" rev="1.0"/>
        <dependency org="mysql" name="mysql-connector-java" rev="3.1.11"/>
        <dependency org="postgresql" name="postgresql" rev="8.1-404.jdbc3"/>

        <!-- acegi depencies -->
        <dependency org="org.acegisecurity" name="acegi-security" rev="1.0.0">
            <!-- Acegi's pom uses 2.0-m2, we are a bit more conservative -->
            <exclude org="org.springframework"/>
            <exclude org="commons-.*" matcher="regexp"/>
            <exclude org="oro"/>
        </dependency>

        <dependency org="org.springframework" name="spring-aop" rev="1.2.8"/>
        <dependency org="org.springframework" name="spring-dao" rev="1.2.8"/>
        <dependency org="org.springframework" name="spring-hibernate" rev="1.2.8"/>
        <dependency org="org.springframework" name="spring-jdbc" rev="1.2.8"/>
        <dependency org="org.springframework" name="spring-orm" rev="1.2.8"/>

        <dependency org="org.springframework" name="spring-oxm" rev="latest.integration" conf="global->default,jaxb1"/>
        <dependency org="org.springframework" name="spring-ws-core" rev="latest.integration"
                    conf="global->default,saaj"/>
        <dependency org="org.springframework" name="spring-ws-security" rev="latest.integration"
                    conf="global->default,xwss"/>

        <!--  build time dependencies -->
        <dependency org="javax.xml" name="jaxb-xjc" rev="2.0.1" conf="buildtime->default"/>

        <!-- test time only dependencies -->
        <dependency org="junit" name="junit" rev="3.8.1" conf="test->default"/>
        <dependency org="xmlunit" name="xmlunit" rev="1.0" conf="test->default"/>
        <dependency org="easymock" name="easymock" rev="1.1" conf="test->default"/>
        <dependency org="clover" name="clover" rev="1.3.11" conf="test->default"/>
        <dependency org="org.springframework" name="spring-mock" rev="1.2.8" conf="test->default"/>
    </dependencies>
</ivy-module>
